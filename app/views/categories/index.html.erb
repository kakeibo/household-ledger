<p id="notice"><%= notice %></p>

<h1>カテゴリ一覧</h1>

<table>
  <thead>
    <tr>
      <th>カテゴリ名</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.name %></td>
        <td><%= link_to '編集', edit_category_path(category) %></td>
        <td><%= link_to '削除', tag, method: :delete, data: { confirm: 'カテゴリを削除してもよいですか？' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'カテゴリ作成', new_category_path %>